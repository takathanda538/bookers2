<h2 class="mt-3">
  New book
</h2>
<%= form_with model: book  do |f| %>
  <div class="form-title">
    <%= f.label :Title %><br>
    <%= f.text_field :title %><br>
  </div>
  <div class="form-body">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %><br>
  </div>
<div class="actions">
  <%= f.submit 'Create Book' ,class: "btn btn-success" %>
</div>
<% end %>